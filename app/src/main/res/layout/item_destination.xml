<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="130dp"
    android:layout_width="200dp"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">
<android.support.constraint.ConstraintLayout
    android:id="@+id/border"
    android:layout_width="200dp"
    android:layout_height="125dp"
    android:background="@drawable/card_destination">

    <LinearLayout
        android:id="@+id/destination_amount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/color_yellow"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/destination_amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dense"
            android:textSize="30sp"
            android:text="20" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/destination_name"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/destination_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dense"
            android:textSize="22sp"
            android:text="@string/default_route_text" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/destination_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/salmon"
        android:gravity="center">
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textSize="8sp"
            android:text="@string/canvas_placeholder"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
</LinearLayout>