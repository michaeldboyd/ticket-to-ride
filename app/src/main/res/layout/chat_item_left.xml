
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal"
    android:gravity="top|start"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="200dp">

    <FrameLayout
        android:layout_marginEnd="2dp"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:background="@drawable/color_gray_nocorners"
        android:visibility="visible"
        >
        <TextView

            android:id="@+id/chat_item_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="H"
            android:textSize="20dp"
            android:fontFamily="@font/dense"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/name_and_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/chat_item_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hunter"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/chat_item_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="3:18"/>
        </LinearLayout>
        <FrameLayout
            android:layout_marginStart="2dp"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingBottom="7dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/color_gray_chat_bubble_left"
            android:visibility="visible"
            >
        <TextView
            android:id="@+id/chat_item_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:inputType="textMultiLine"
            android:text="This is one line."
            android:layout_gravity="center_vertical"
            />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
